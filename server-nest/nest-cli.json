{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "classValidatorShim": true,
          "controllerFileNameSuffix": ".controller.ts",
          "dtoFileNameSuffix": [".dto.ts", ".dtos.ts"]
        }
      }
    ]
  },
  "projects": {
    "proxy-gen": {
      "type": "application",
      "root": "tools",
      "entryFile": "proxy-api-generator.main",
      "sourceRoot": "tools/proxy-api-generator"
    },
    "octoprint-websocket-mock": {
      "type": "application",
      "root": "tools",
      "entryFile": "octoprint-websocket-mock.main",
      "sourceRoot": "tools/octoprint-websocket-mock"
    }
  }
}
