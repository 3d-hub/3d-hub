{
  "extends": ["config:base"],
  "assignees": ["davidzwa"],
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch", "bump", "digest", "rollback"],
      "enabled": true
    },
    {
      "paths": ["client-vue/package.json"],
      "matchPackageNames": ["vue", "vue-template-compiler"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "vue",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "enabled": true,
      "automerge": true
    },
    {
      "paths": ["client-vue/package.json"],
      "matchPackageNames": ["vue", "vuex", "vue-router"],
      "enabled": false
    }
  ],
  "ignorePaths": ["server/docker/test-node12.Dockerfile"]
}
